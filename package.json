{
  "name": "motp",
  "version": "1.0.0",
  "description": "CLI OTP manager",
  "main": "index.js",
  "scripts": {
    "testonly": "mocha {mocha-setup.js,{lib,test}/**/*.spec.js} --color",
    "test": "mocha {mocha-setup.js,{lib,test}/**/*.spec.js} --color",
    "pretest": "npm run lint",
    "watch": "mocha --color --watch {mocha-setup.js,{lib,test}/**/*.spec.js}",
    "lint": "eslint ."
  },
  "author": "Dima Ryskin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapiend/motp.git"
  },
  "keywords": [
    "OTP",
    "OAUTH"
  ],
  "bugs": {
    "url": "https://github.com/sapiend/motp/issues"
  },
  "homepage": "https://github.com/sapiend/motp#readme",
  "devDependencies": {
    "chai": "^4.1.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.5.0",
    "sinon": "^3.0.0",
    "sinon-chai": "^2.12.0"
  },
  "dependencies": {
    "commander": "^2.11.0",
    "debug": "^2.6.8",
    "fs-extra": "^4.0.1",
    "jimp": "^0.2.28",
    "lodash": "^4.17.4",
    "nedb": "^1.8.0",
    "otplib": "^5.0.0",
    "qrcode-reader": "^1.0.2",
    "url-otpauth": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "mocha": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "arrow-parens": 0,
      "no-unused-expressions": 0,
      "arrow-body-style": 0,
      "max-len": 0,
      "no-console": 0,
      "prefer-default-export": 0,
      "quotes": 0,
      "import/no-extraneous-dependencies": 0
    }
  }
}
